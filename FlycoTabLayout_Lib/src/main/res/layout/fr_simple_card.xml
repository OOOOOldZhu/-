<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/card_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="什么是mcookie套件？" />

    <LinearLayout
        android:layout_below="@+id/card_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/header_fragment_image"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/homepag" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mCookie" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="脑洞达人的最爱" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mCookie 是为所有电子DIY爱好者所制造，其目的在于将电子DIY项目带到生活中，给爱好者们触手可及的乐趣。 它具备造型小巧、磁性吸引、颜色编码、乐高可堆叠的特性。

" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>